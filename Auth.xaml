<Window x:Class="DiplomStoreHouse.Auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiplomStoreHouse"
        mc:Ignorable="d"
           Title="Авторизация" Height="387" Width="369">
    <Grid Background="#D2E3E9" >
        <StackPanel Margin="20" VerticalAlignment="Center">
            <TextBlock Text="Приветствую вас!" 
                  FontSize="20" 
                  FontWeight="Bold" 
                  HorizontalAlignment="Center" 
                  Margin="0,0,0,20"
                  Foreground="Black"/>
            <TextBlock Text="Вход в систему" 
                FontSize="16" 
                HorizontalAlignment="Center" 
                Margin="0,0,0,20"
                Foreground="Black"/>
            <Grid>
                <TextBox Name="TextBox_Username"  
                    Margin="0,0,0,10"
                    Padding="10" 
                    FontSize="16"
                    Background="#FFF" 
                    BorderBrush="#D0D0D0" 
                    BorderThickness="1"
                    GotFocus="Username_GotFocus"
                    LostFocus="Username_LostFocus"/>
                <TextBlock x:Name="UsernamePlaceholder"
                      Text="Введите логин"
                      FontSize="16"
                      Foreground="Gray"
                      VerticalAlignment="Center"
                      Margin="10,0,80,0" 
                      IsHitTestVisible="False" 
                      Visibility="Visible" Height="34"/>
            </Grid>
            <Grid>
                <PasswordBox Name="TextBox_Password"
                        Margin="0,0,0,20"
                        Padding="10" 
                        FontSize="16"
                        Background="#FFF" 
                        BorderBrush="#D0D0D0"
                        BorderThickness="1"
                        GotFocus="Password_GotFocus"
                        LostFocus="Password_LostFocus"/>
                <TextBlock x:Name="PasswordPlaceholder"
                      Text="Введите пароль"
                      FontSize="16"
                      Foreground="Gray"
                      VerticalAlignment="Center"
                      Margin="10,0,80,0" 
                      IsHitTestVisible="False" 
                      Visibility="Visible" 
                      Height="43"/>
            </Grid>
            <Button Content="Войти" 
               Width="100" 
               FontSize="16" 
               Background="#4F6DAE" 
               Foreground="White" 
               BorderBrush="#4165B5" 
               BorderThickness="1" 
               Click="btnLogin_Click" Height="27"/>
        </StackPanel>
    </Grid>
</Window>

